<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/recycler_regular">

    <ImageView
        android:id="@+id/item_iv_my_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/coffee1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_my_order_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/coffee_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/item_iv_my_product"
        app:layout_constraintStart_toStartOf="@id/item_iv_my_product"
        app:layout_constraintTop_toBottomOf="@id/item_iv_my_product"
        tools:text="아메리카노 외 2잔"
        android:fontFamily="@font/hsbombaram"/>

    <TextView
        android:id="@+id/item_tv_my_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coffee_light_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/item_tv_my_order_menu"
        app:layout_constraintStart_toStartOf="@id/item_tv_my_order_menu"
        app:layout_constraintTop_toBottomOf="@id/item_tv_my_order_menu"
        tools:text="25000원" />

    <TextView
        android:id="@+id/item_tv_my_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coffee_light_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/item_tv_my_total_price"
        app:layout_constraintStart_toStartOf="@id/item_tv_my_total_price"
        app:layout_constraintTop_toBottomOf="@id/item_tv_my_total_price"
        tools:text="2021.05.06" />

    <TextView
        android:id="@+id/item_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/button_non_color"
        android:gravity="center"
        android:padding="10dp"
        android:fontFamily="@font/hsbombaram"
        android:textColor="@color/coffee_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_tv_my_order_date"
        tools:text="픽업 완료" />


</androidx.constraintlayout.widget.ConstraintLayout>