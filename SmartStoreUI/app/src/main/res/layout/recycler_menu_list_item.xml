<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/item_iv_menu_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/coffee1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coffee_gray"
        android:fontFamily="@font/hsbombaram"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/item_iv_menu_product"
        app:layout_constraintStart_toStartOf="@id/item_iv_menu_product"
        app:layout_constraintTop_toBottomOf="@id/item_iv_menu_product"
        tools:text="아메리카노" />

</androidx.constraintlayout.widget.ConstraintLayout>