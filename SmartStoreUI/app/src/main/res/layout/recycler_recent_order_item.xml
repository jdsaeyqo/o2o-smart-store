<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_regular"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/item_iv_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/coffee1"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_order_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/coffee_gray"
        android:fontFamily="@font/hsbombaram"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/item_iv_product"
        app:layout_constraintStart_toStartOf="@id/item_iv_product"
        app:layout_constraintTop_toBottomOf="@id/item_iv_product"
        tools:text="아메리카노 외 2잔" />

    <TextView
        android:id="@+id/item_tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coffee_light_gray"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/item_tv_order_menu"
        app:layout_constraintStart_toStartOf="@id/item_tv_order_menu"
        app:layout_constraintTop_toBottomOf="@id/item_tv_order_menu"
        tools:text="25000원" />

    <TextView
        android:id="@+id/item_tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coffee_light_gray"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/item_tv_total_price"
        app:layout_constraintStart_toStartOf="@id/item_tv_total_price"
        app:layout_constraintTop_toBottomOf="@id/item_tv_total_price"
        tools:text="2021.05.06" />

    <ImageView

        android:id="@+id/item_btn_shoppingList"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_tv_order_date" />


</androidx.constraintlayout.widget.ConstraintLayout>