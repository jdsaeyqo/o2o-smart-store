<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hsbombaram"
        android:text="JOIN"
        android:textColor="@color/coffee_gray"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/et_id"
        app:layout_constraintEnd_toEndOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cafe24_ssurround"
        android:hint="아이디"
        android:textColor="@color/coffee_gray"
        android:textColorHint="@color/coffee_gray"
        app:layout_constraintBottom_toTopOf="@id/et_pass"
        app:layout_constraintEnd_toStartOf="@id/btn_check"
        app:layout_constraintStart_toStartOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@id/tv_login" />

    <ImageButton
        android:id="@+id/btn_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:background="@color/coffee_dark_brown"
        android:scaleType="centerInside"
        android:src="@drawable/check"
        app:layout_constraintBottom_toBottomOf="@id/et_id"
        app:layout_constraintEnd_toEndOf="@id/et_pass"
        app:layout_constraintStart_toEndOf="@id/et_id"
        app:layout_constraintTop_toTopOf="@id/et_id" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cafe24_ssurround"
        android:hint="비밀번호"
        android:textColor="@color/coffee_gray"
        android:textColorHint="@color/coffee_gray"
        app:layout_constraintBottom_toTopOf="@id/et_nickName"
        app:layout_constraintEnd_toEndOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@id/et_id" />

    <EditText
        android:id="@+id/et_nickName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cafe24_ssurround"
        android:hint="이름"
        android:textColor="@color/coffee_gray"
        android:textColorHint="@color/coffee_gray"
        app:layout_constraintBottom_toTopOf="@id/btn_join"
        app:layout_constraintEnd_toEndOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="@id/iv_logo"
        app:layout_constraintTop_toBottomOf="@id/et_pass" />


    <Button
        android:id="@+id/btn_join"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_regular"
        android:fontFamily="@font/hsbombaram"
        android:text="회원가입"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/et_nickName"
        app:layout_constraintStart_toStartOf="@id/et_nickName"
        app:layout_constraintTop_toBottomOf="@id/et_nickName" />


</androidx.constraintlayout.widget.ConstraintLayout>